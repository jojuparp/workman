GET     /               controllers.AppController.index
GET     /api/users      controllers.UserController.listUsers
GET     /api/users/:id  controllers.UserController.readUser(id: reactivemongo.bson.BSONObjectID)

POST    /api/users      controllers.UserController.createUser

PUT     /api/users/:id  controllers.UserController.updateUser(id: reactivemongo.bson.BSONObjectID)

DELETE  /api/users/:id  controllers.UserController.deleteUser(id: reactivemongo.bson.BSONObjectID)

